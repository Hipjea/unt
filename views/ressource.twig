{% extends "base.twig" %}

{% block header %}
    <div class="ressource-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ site.link }}">
                <img id="logo-header-menu" class="header-logo" src="{{themeOptions.headerLogoOnScroll }}">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        {% if evaluationForm is defined and evaluationForm is not null %}
                            <a role="button" class="btn btn-outline-primary btn-ressource" target="_blank" href="{{ evaluationForm }}">
                                {{ appMessage[currentLang].ressourceVotreAvis }}
                            </a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </nav>
    </div>
{% endblock %}

{% block content %}
    {% if ressourceType == "iframe" %}
        <iframe class="iframe-ressource" src="{{ ressourceContent }}"></iframe>
    {% elseif ressourceType == "html" %}
         <div class="content-text">
            {{ ressourceContent }}
         </div>
    {% else %}
        <div class="content-text">
            {{ appMessage[currentLang].ressourceNonAffichee }}
        </div>
    {% endif %}
{% endblock %}

{% block footer %}
    {{ function('wp_footer') }}
{% endblock %}