{% extends "base.twig" %}

{% block content %}

<main>
    <ul class="navbar-nav ml-auto">
        {% for menuItem in header %}
            {% if menuItem.subMenus is not empty %}
                <li class="nav-item menu-item dropdown">
                    <a class="nav-link dropdown-toggle" 
                        href="{{ menuItem.value }}" 
                        aria-expanded="false" 
                        up-follow 
                        up-target=".content"
                        up-transition="cross-fade"
                        up-layer="root">
                        {{ menuItem.title }}
                    </a>
                    <ul class="dropdown-menu">
                        {% include "partial/recursive-menu.twig" with {'menuItem': menuItem.subMenus} %}
                    </ul>
                </li>
            {% else %}
                <li class="nav-item menu-item active">
                    <a href="{{ menuItem.value }}" 
                        up-follow 
                        up-target=".content"
                        up-transition="cross-fade"
                        up-layer="root">
                        {{ menuItem.title }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
        <li class="nav-item item-langues">
            {% do action('icl_language_selector') %}
        </li>
    </ul>
</main>

{% endblock %}
